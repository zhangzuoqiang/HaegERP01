<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@127.0.0.1:1521:HAEGERP</property>
		<property name="hibernate.connection.username">haegerp_admin</property>
		<property name="hibernate.connection.password">haegerOracleDatabaseERP</property>
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<property name="show_sql">true</property>
		<mapping resource="org/haegerp/entity/Article.hbm.xml" />
		<mapping resource="org/haegerp/entity/ArticleCategory.hbm.xml" />
		<mapping resource="org/haegerp/entity/BusinessPartner.hbm.xml" />
		<mapping resource="org/haegerp/entity/Supplier.hbm.xml" />
		<mapping resource="org/haegerp/entity/Client.hbm.xml" />
		<mapping resource="org/haegerp/entity/ClientCategory.hbm.xml" />
		<mapping resource="org/haegerp/entity/Permission.hbm.xml" />
		<mapping resource="org/haegerp/entity/UserGroup.hbm.xml" />
		<mapping resource="org/haegerp/entity/SalaryCategory.hbm.xml" />
		<mapping resource="org/haegerp/entity/Division.hbm.xml" />
		<mapping resource="org/haegerp/entity/EmployeeUser.hbm.xml" />
		<mapping resource="org/haegerp/entity/Employee.hbm.xml" />
	</session-factory>
</hibernate-configuration>